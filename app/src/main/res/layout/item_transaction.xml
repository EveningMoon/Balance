<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <com.zhan.library.CircularView style="@style/CircularViewStyle_unselected"
        android:id="@+id/transactionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/earnBurnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="@dimen/text_xsmall"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/transactionIcon"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/transactionPointsPerUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01-Jan-2016"
        android:textSize="@dimen/text_xsmall"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/transactionUnitType" />

    <TextView
        android:id="@+id/transactionUnitType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-25.00"
        android:textSize="@dimen/text_xsmall"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>